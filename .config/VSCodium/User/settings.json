{
    "files.autoSave": "onWindowChange",
    "workbench.colorTheme": "Nord",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.sideBar.location": "right",
    "update.mode": "manual",
    "editor.fontSize": 18,
    "editor.bracketPairColorization.enabled": true,
    "editor.renderWhitespace": "all",
    "editor.fontFamily": "'JetBrainsMono Nerd Font Mono'",
    "editor.inlayHints.fontFamily": "'FiraCode Nerd Font Mono'",
    "files.eol": "\n",
    "terminal.external.windowsExec": "powershell",
    "terminal.external.linuxExec": "bash",
    "terminal.external.osxExec": "bash",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.fontFamily": "'SauceCodePro Nerd Font'",
    "terminal.integrated.rightClickBehavior": "paste",
    "terminal.integrated.fontSize": 16,
    "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/init.vim",
    "vscode-neovim.neovimExecutablePaths.linux": "nvim",
    "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.vim",
    "vscode-neovim.neovimExecutablePaths.darwin": "nvim",
    "lldb.showDisassembly": "never",
    "files.watcherExclude": {
      "**/.bloop": true,
      "**/.metals": true,
      "**/.ammonite": true
    },
  }